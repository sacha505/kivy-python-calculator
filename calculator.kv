# Custom button
<CustButton@Button>:
	font_size: 20


<grid>:
	id: calculator
	display: entry
	rows: 6
	padding: 5
	spacing: 5


	# input
	BoxLayout:
		TextInput:
			id: entry
			font_size: 20
			multiline: False

	# button
	BoxLayout:
		spacing: 5
		CustButton:
			text: "%"
			on_press: entry.text += self.text
			background_normal: ''
			background_color: (251/255, 240/255, 178/255)
		CustButton:
			text: "h"
			on_press: entry.text += self.text
			background_normal: ''
			background_color: (255/255, 199/255, 234/255)
		CustButton:
			text: "\u221A"
			on_press: entry.text += self.text
			background_normal: ''
			background_color: (216/255, 180/255, 248/255)
		CustButton:
			text: "/"
			on_press: entry.text += self.text
			background_normal: ''
            background_color: (202/255, 237/255, 255/255)




	# button
	BoxLayout:
		spacing: 5
		CustButton:
			text: "7"
			on_press: entry.text += self.text
			background_normal: ''
			background_color: (251/255, 240/255, 178/255)
		CustButton:
			text: "8"
			on_press: entry.text += self.text
			background_normal: ''
			background_color: (255/255, 199/255, 234/255)
		CustButton:
			text: "9"
			on_press: entry.text += self.text
			background_normal: ''
			background_color: (216/255, 180/255, 248/255)
		CustButton:
			text: "*"
			on_press: entry.text += self.text
			background_normal: ''
            background_color: (202/255, 237/255, 255/255)

	BoxLayout:
		spacing: 5
		CustButton:
			text: "4"
			on_press: entry.text += self.text
			background_normal: ''
			background_color: (251/255, 240/255, 178/255)
		CustButton:
			text: "5"
			on_press: entry.text += self.text
			background_normal: ''
			background_color: (255/255, 199/255, 234/255)
		CustButton:
			text: "6"
			on_press: entry.text += self.text
			background_normal: ''
			background_color: (216/255, 180/255, 248/255)
		CustButton:
			text: "-"
			on_press: entry.text += self.text
			background_normal: ''
			background_color: (202/255, 237/255, 255/255)

	BoxLayout:
		spacing: 5
		CustButton:
			text: "1"
			on_press: entry.text += self.text
			background_normal: ''
			background_color: (251/255, 240/255, 178/255)
		CustButton:
			text: "2"
			on_press: entry.text += self.text
			background_normal: ''
			background_color: (255/255, 199/255, 234/255)
		CustButton:
			text: "3"
			on_press: entry.text += self.text
			background_normal: ''
			background_color: (216/255, 180/255, 248/255)
		CustButton:
			text: "+"
			on_press: entry.text += self.text
			background_normal: ''
			background_color: (202/255, 237/255, 255/255)

	BoxLayout:
		spacing: 5
		CustButton:
			text: "AC"
			on_press: entry.text = ""
			background_normal: ''
			background_color: (251/255, 240/255, 178/255)
		CustButton:
			text: "0"
			on_press: entry.text += self.text
			background_normal: ''
			background_color: (255/255, 199/255, 234/255)
		CustButton:
			text: "."
			on_press: entry.text += self.text
			background_normal: ''
			background_color: (216/255, 180/255, 248/255)
		CustButton:
			text: "="
			on_press: calculator.calculate(entry.text)
			background_normal: ''
			background_color: (202/255, 237/255, 255/255)


